
<h1>User Profile Page</h1>

<ul>
  <li>Your username: <%= @user.username %></li>
  <li>Your email: <%= @user.email %></li>
</ul>

<h2> Your uploaded images:</h2>
<p>--------------------------------</p>
<% @user.images.each do |image| %>
  <%= render partial: "images/show", layout: false, locals: {image: image} %>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @images.each do |image| %>
    <tr>
      <td>
        <%= image.id %>
      </td>
      <td class="image-td">
        <img class="image-inventory" src="https://api.mapbox.com/v4/karlaking2.8kwtn5pq/-85.59478044867362,44.777045092220206,10/1200x200.png?access_token=tk..x7LkmJIFXQuuySPhr-3Dag"/>
      </td>
      <td class="name-td">
        <%= image.title %>
      </td>
      <td>
        <%= image.marker_lat %>
      </td>
      <td>
        <%= image.marker_long %>
      </td>
      <td>
        <a href="">
          <span aria-hidden="true" class="glyphicon glyphicon-wrench"></span>
        </a>
      </td>
      <td>
        <a data-confirm="You Sure?" data-method="delete" href="" rel="nofollow">
          <span aria-hidden="true" class="glyphicon glyphicon-trash"></span>
        </a>
      </td>
    </tr>
  <% end %>
</table>


